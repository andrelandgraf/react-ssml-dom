{
    "compilerOptions": {
        "outDir": "dist",
        "module": "esnext",
        "target": "es5",
        "lib": ["dom", "dom.iterable", "es6", "es2017", "esnext"],
        "sourceMap": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "declaration": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react"
    },
    "include": ["src", "index.ts", "demo/conversation"],
    "exclude": ["node_modules", "test", "dist"]
}
